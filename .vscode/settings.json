{
  "tailwindCSS.includeLanguages": { "typescriptreact": "html" },
  "tailwindCSS.emmetCompletions": true,
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "todo-tree.general.tags": [
    "XXX",
    "TODO",
    "HACK",
    "FIXME",
    "BUG",
    "TEST",
    "TALK"
  ],
  "typescript.tsdk": "./node_modules/typescript/lib",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/.vscode": false
  }
}
