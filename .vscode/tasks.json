{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev Environment",
      "dependsOn": ["Frontend App", "Proxy Server"],
      "presentation": {
        "reveal": "silent",
        "showReuseMessage": false,
        "clear": true
      },
      "runOptions": { "runOn": "folderOpen" }
    },
    {
      "label": "Checks in Dev Environment",
      "dependsOn": ["Typecheck", "Lint"],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "Frontend App",
      "type": "shell",
      "command": "npm run start",
      "presentation": {
        "group": "server"
      }
    },
    {
      "label": "Proxy Server",
      "type": "shell",
      "command": "npm run proxy",
      "presentation": {
        "group": "server"
      }
    }
  ]
}
