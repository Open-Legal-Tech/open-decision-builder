{
  "name": "open-decision-frontend",
  "version": "1.0.0",
  "browserslist": [
    "defaults",
    "not IE 11",
    "not IE_Mob 11",
    "maintained node versions"
  ],
  "publishConfig": {
    "access": "public"
  },
  "description": "",
  "scripts": {
    "dev": "snowpack dev",
    "build": "yarn codegen && snowpack build",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\"",
    "codegen": "graphql-codegen --config .codegen.yml",
    "clean": "rimraf dist *.tsbuildinfo"
  },
  "keywords": [],
  "author": "Philipp Garbowsky <phil.garbowsky@philtech.dev>",
  "license": "ISC",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^3.0.0",
    "@graphql-codegen/cli": "1.19.3",
    "@graphql-codegen/introspection": "1.18.1",
    "@graphql-codegen/typescript": "1.18.1",
    "@graphql-codegen/typescript-operations": "1.17.12",
    "@graphql-codegen/typescript-urql": "^2.0.3",
    "@snowpack/plugin-dotenv": "^2.0.4",
    "@snowpack/plugin-postcss": "^1.0.7",
    "@snowpack/plugin-typescript": "^1.1.0",
    "@snowpack/plugin-webpack": "^2.1.1",
    "@types/node": "^14.14.10",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.6",
    "@types/snowpack-env": "^2.3.2",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "autoprefixer": "^10.0.3",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "postcss": "^8.1.10",
    "postcss-cli": "^8.3.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "2.2.0",
    "snowpack": "^2.17.1",
    "ts-node": "^9.0.0",
    "type-fest": "^0.20.2",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@graywolfai/react-heroicons": "^1.1.1",
    "@urql/devtools": "^2.0.2",
    "clsx": "^1.1.1",
    "date-fns": "^2.16.1",
    "flume": "^0.6.2",
    "fp-ts": "^2.9.0",
    "framer-motion": "^2.9.4",
    "graphql": "^15.4.0",
    "graphql-tag": "^2.11.0",
    "io-ts": "^2.2.13",
    "io-ts-types": "^0.5.12",
    "match-sorter": "^6.0.1",
    "react": "^16",
    "react-dom": "^16",
    "react-router-dom": "^5.2.0",
    "remeda": "0.0.27",
    "tailwindcss": "^2.0.1",
    "urql": "^1.11.3"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier",
      "prettier/react",
      "prettier/@typescript-eslint",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:react-hooks/recommended"
    ],
    "env": {
      "browser": true,
      "es6": true
    },
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "plugins": [
      "react",
      "@typescript-eslint"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "react/prop-types": "off",
      "@typescript-eslint/no-unsafe-assignment": "off",
      "@typescript-eslint/no-unsafe-return": "off",
      "@typescript-eslint/no-explicit-any": "off"
    },
    "settings": {
      "react": {
        "pragma": "React",
        "version": "detect"
      }
    },
    "ignorePatterns": [
      "src/types/generated/*",
      "*.config*"
    ]
  },
  "prettier": {},
  "graphql": {
    "schema": "https://builder.open-decision.org/graphql",
    "documents": "src/**/*.graphql.ts",
    "extensions": {
      "endpoints": {
        "default": {
          "url": "https://builder.open-decision.org/graphql"
        }
      }
    }
  }
}
