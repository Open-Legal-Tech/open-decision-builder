{
  "extends": "../tsconfig.settings.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "paths": {
      "@internalTypes/*": ["types/*"],
      "@components/*": ["components/*"],
      "@features/*": ["features/*"],
      "@utils/*": ["utils/*"]
    },
    "noEmit": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["src"]
}
