{
  "extends": "../tsconfig.settings.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "jsx": "react",
    "declarationDir": "dist/types",
    "outDir": "dist",
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "baseUrl": "./src",
    "paths": { "@globalTypes/*": ["types/*"], "@utilities/*": ["utilities/*"] }
  },
  "include": ["src/**/*"]
}
