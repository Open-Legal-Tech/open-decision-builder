{
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "paths": {
      "internalTypes*": [
        "types*",
        "types"
      ],
      "components*": [
        "components*",
        "components"
      ],
      "features*": [
        "features*",
        "features"
      ],
      "utils*": [
        "utils*",
        "utils"
      ]
    },
    "module": "ESNext",
    "types": [],
    "sourceMap": true,
    "target": "ES2018",
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
