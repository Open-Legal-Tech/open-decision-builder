{
  "compilerOptions": {
    "noEmit": true /* Most important thing: will not compile anything */,
    "jsx": "preserve" /* Do not compile your JSX */,
    "allowSyntheticDefaultImports": true,
    "target": "ES2018",
    // "strict": true,
    // "alwaysStrict": true,
    // "strictNullChecks": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
